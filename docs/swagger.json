{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "API de Productos",
    "description": "API para gestionar productos scrapeados"
  },
  "paths": {
    "/api/products": {
      "get": {
        "summary": "Obtener todos los productos",
        "responses": {
          "200": {
            "description": "Lista de productos"
          }
        }
      },
      "post": {
        "summary": "Agregar productos desde JSON",
        "responses": {
          "201": {
            "description": "Productos insertados"
          }
        }
      }
    },
    "/api/products/{id}": {
      "put": {
        "summary": "Actualizar un producto",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "Producto actualizado"
          }
        }
      },
      "delete": {
        "summary": "Eliminar un producto",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "Producto eliminado"
          }
        }
      }
    }
  }
}
